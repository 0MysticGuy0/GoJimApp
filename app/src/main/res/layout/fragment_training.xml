<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingFragment"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/background">

    <Button
        android:id="@+id/trainingPage_trainProgrBtn"
        style="@style/BtnStyle01"
        android:layout_width="match_parent"
        android:text="программы тренировок"
        app:icon="@drawable/baseline_catching_pokemon_24" />
    <Button
        android:id="@+id/trainingPage_exercisesBtn"
        style="@style/BtnStyle01"
        android:layout_width="match_parent"
        android:text="упражнения"
        app:icon="@drawable/baseline_article_24" />
    <Button
        android:id="@+id/trainingPage_calculatorsBtn"
        style="@style/BtnStyle01"
        android:layout_width="match_parent"
        android:text="калькулятор"
        app:icon="@drawable/baseline_calculate_24" />
</LinearLayout>